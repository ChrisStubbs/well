@using PH.Well.Dashboard.Extensions

@{
    Layout = null;
}

<div class="app">
    <div class="row-fluid">
        <div>
            <a routerLink="/widgets" routerLinkActive="active" title="Home">
                <div class="logo"><img src="" /></div>
            </a>
            <div id="headerHolder">
                <span style="color: white; font-weight: bold">{{version}}</span> &nbsp; <span style="color: white; font-weight: bold">{{branches}}</span>
            </div>
            <div id="user-details" class="pull-right">
                <div>Logged in as <span id="current-user-name">@Html.EmployeeDisplayName()</span></div>
                <img id="avatar" src="@Html.EmployeeAvatar()" alt="@Html.EmployeeDisplayName()" height="41" width="41" />
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div id="nav">
            <ul class="nav nav-pills" style="min-height: 39px;">
                <li><a routerLink="/widgets" routerLinkActive="active" title="Home">Home</a></li>
                <li><a routerLink="/routes" routerLinkActive="active">Routes</a></li>
                <li><a routerLink="/exceptions" routerLinkActive="active">Exceptions</a></li>
                <li><a routerLink="/approvals" routerLinkActive="active">Approvals</a></li>
                <li><a routerLink="/clean" routerLinkActive="active">Clean</a></li>
                <li><a routerLink="/resolved" routerLinkActive="active">Resolved</a></li>
                <li><a routerLink="/notifications" routerLinkActive="active">Notifications</a></li>
                <li><a routerLink="/audits" routerLinkActive="active">Audits</a></li>
                <li class="dropdown pull-right" style="margin-right: 125px;" id="admin-dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="admin-dropdown-anchor">
                        Admin <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a id="branch-selection" routerLink="/branch" routerLinkActive="active">Your Branch Selection</a></li>
                        <li><a id="user-preference-selection" routerLink="/preferences" routerLinkActive="active">User Branch Preferences</a></li>
                        <li><a id="user-threshold" routerLink="/user-threshold" routerLinkActive="active">User Threshold Level</a></li>
                        <li><a id="branch-preference" routerLink="/branch-role" routerLinkActive="active">Branch Parameters</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="container">
    <toaster-container></toaster-container>
    <router-outlet></router-outlet>
</div>
<input type="hidden" value="loaded" id="page-loaded" />
